modules = ["nodejs-20", "bash", "web"]
run = "node index.js"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd packages/client && npm install && npm run dev -- --host 0.0.0.0 --port 5000"]

[workflows]
